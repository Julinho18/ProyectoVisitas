<div style="margin-right: 2%; margin-bottom: 10px; text-align: center;">
    <a href="@urlVisitante">
        <img src="@Visitante.Imagen" alt="Poster" style="width:225px; height: 300px;" />
    </a>
    <p style="max-width: 225px; height:44px; font-size: 15px; font-weight: bold;">
        <a href="@urlVisitante">@Visitante.TituloCortado</a>
    </p>
    <div>
        <a class="btn btn-info">Editar</a>
        <button type="button" class="btn btn-danger" @onclick="@(()=>EliminarVisitanteHIJO.InvokeAsync(Visitante))">
            Borrar
        </button>
    </div>
</div>

@code{
    [Parameter] public Visitante Visitante { get; set; }
    [Parameter] public bool MostrarBotones { get; set; } = false;
    [Parameter] public EventCallback<Visitante> EliminarVisitanteHIJO { get; set; }

    //para construir la URL vamos a usar el protected
    private string urlVisitante = string.Empty;
    protected override void OnInitialized()
    {
        urlVisitante = $"visitante/";
    }
}
