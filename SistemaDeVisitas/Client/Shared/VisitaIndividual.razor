
<div style="margin-right: 2%; margin-bottom: 10px; text-align: center;">
    @*<a href="@urlVisita">
        <img src="@Visita.No_Estado" alt="Poster" style="width:225px; height: 300px;" />
    </a>*@
    <p style="max-width: 225px; height:44px; font-size: 15px; font-weight: bold;">
        <a href="@urlVisita">@Visita.Id</a>
    </p>
    <div>
        <a class="btn btn-info">Editar</a>
        <button type="button" class="btn btn-danger" @onclick="@(()=>EliminarVisitaHIJO.InvokeAsync(Visita))">
            Borrar
        </button>
    </div>
</div>

@code{
    [Parameter] public Visita Visita { get; set; }
    [Parameter] public bool MostrarBotones { get; set; } = false;
    [Parameter] public EventCallback<Visita> EliminarVisitaHIJO { get; set; }

    //para construir la URL vamos a usar el protected
    private string urlVisita = string.Empty;
    protected override void OnInitialized()
    {
        urlVisita = $"visita/";
    }
}
